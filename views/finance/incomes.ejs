<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/finance/stylesincomes.css">
</head>

<body>

    <%- include('../includes/navigation.ejs') %>
   <main>
    <h1>Calcular Ganancias</h1>
    <section class="income-form">
        <div class="income-report">
       
        <h3>Selecciona un mes para obtener la ganancia diaria y mensual</h3>
        <form action="/finance/income/report" method="GET">
            <div class="input-group">
            <label for="">Fecha</label>
            <select name="date" id="date">
                <% for (var date of incomeDates) { %>
                    <option value="<%= date.incomeDate %>"><%= date.incomeDate %></option> 
                    <% } %>
            </select>
         </div>
             <button class="income-btn">Descargar Reporte</button>
        </form>
     </div>
    </section>
 
</main>

  

