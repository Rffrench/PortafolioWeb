<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/customers/stylesreservations.css">
<link rel="stylesheet" href="/css/customers/mqsstylesreservations.css">
<link rel="stylesheet" href="/css/products/mqsstylesproducts.css">
</head>

<body>

    <%- include('../includes/navigation.ejs') %>
    <main>

        <h1>Ordenes de Inventario</h1>
      
        <% if (errorMessage) { %>
          <p class="error-message">ERROR: <%= errorMessage %></p>
          <% } %>
          <% if (!orders) { %>
            <h2> No hay ordenes registradas.</h2>
            <%  }else{ %>
        <div class="crud-order">
            <table class="table">
                <thead>                 
                    <th >#</th>
                    <th >Motivo</th>
                    <th >Id Estado</th>
                    <th >Estado de Orden</th>
                    <th >Opciones</th>                  
                </thead>
                <tbody>
                    <% for (var order of orders) { %>
                  <tr>
                    <form action="/admin/order-products/<%= order.id %>" class="common-form" method="POST">
                    <td scope="row"><%= order.id %></td>                    
                    <input type="hidden" id="order" name="order" value="<%= order.id %>">

                    <td><%= order.orderDescription %></td>
                    <input type="hidden" id="description" name="description" value="<%= order.orderDescription %>">

                    <td><%= order.statusId %> </td>
                    <input type="hidden" id="statusId" name="statusId" value="<%= order.statusId %>">

                    <td><%= order.statusDescription %> </td>
                    <input type="hidden" id="status" name="status" value="<%= order.statusDescription %>">
                    <input type="hidden" id="orderObj" name="orderObj" value="<%= order %>">
                    <td><button class="main-button" type="submit">Administrar</button> </td>
                  </form>
                  </tr>
                  
                
        
                  <% } %>
                  
                </tbody>
              </table>
              <%  } %>
            </div>
      

        

    </main>

    <%- include('../includes/footer.ejs') %>
    <%- include('../includes/end.ejs') %>

