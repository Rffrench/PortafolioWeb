<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/customers/stylesreservations.css">
<link rel="stylesheet" href="/css/customers/mqsstylesreservations.css">
</head>

<body>

    <%- include('../includes/navigation.ejs') %>
    <main>

        <h1>Crear Receta</h1>
       
        <h3 class="reservation-info">Ingrese los datos de la receta </h3>

        <form action="/admin/recipes" class="common-form" method="POST">

            <!--Si hay ERRORES se muestra esto-->
            <% if (errorMessage) { %>
            <p class="error-message">ERROR: <%= errorMessage %></p>
            <% } %>


            <div class="form-field-group">
                <label for="name">*<span class="reservation-field-label">Nombre de receta: </span>
                </label>
                <input type="text" name="name" id="name" class=""  required>
            </div>
            <div class="form-field-group">
                <label for="description">*<span class="reservation-field-label">Descripción: </span>
                </label>
                <textarea name="description" id="description" rows="10" cols="50" required></textarea>
                
            </div>
                        

            <div class="form-field-group">
                <label for="party">*<span class="reservation-field-label">Tiempo de cocción </span>
                </label>
                <input type="number" name="cookingTime" id="cookingTime" class="fill-input" min="1" value="15"
                     step="1" required>
            </div>

            <!--Se envia el ID de usuario como campo invisible para identificar la reserva-->
            <input type="hidden" name="userId" id="userId" value="<%= localStorage.getItem('userId'); %>">

            <button class="main-button" type="submit">Crear Receta</button>
        </form>

    </main>

    <%- include('../includes/footer.ejs') %>
    <%- include('../includes/end.ejs') %>