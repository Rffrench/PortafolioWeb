<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/customers/stylesreservations.css">
<link rel="stylesheet" href="/css/customers/mqsstylesreservations.css">
</head>

<body>

    <%- include('../includes/navigation.ejs') %>
    <main>

        <h1>Agregar Producto</h1>
       
        <h3 class="reservation-info">Ingrese los datos de la receta </h3>

        <form action="/admin/order-products/add" class="common-form" method="POST">

            <!--Si hay ERRORES se muestra esto-->
            <% if (errorMessage) { %>
            <p class="error-message">ERROR: <%= errorMessage %></p>
            <% } %>


            <div class="form-field-group">
                <label for="order">*<span class="reservation-field-label">Numero de Orden: </span>
                </label>
                <input type="text" name="order" id="order" class="" value="<%= order %>" required>
            </div>
            <div class="form-field-group">
                <label for="product">*<span class="reservation-field-label">Producto: </span>
                </label>            
                   
                   
                <select name="product" id="product">
                    <% for (var product of products) { %>
                   <option value="<%= product.id %>"><%= product.name %></option>
                   <% } %>
                </select>
            </div>

            <div class="form-field-group">
                <label for="quantity">*<span class="reservation-field-label">Cantidad </span>
                </label>
                <input type="number" name="quantity" id="quantity" class="fill-input" min="1" value="15"
                     step="1" required>
            </div>

            <!--Se envia el ID de usuario como campo invisible para identificar la reserva-->
        

            <button class="main-button" type="submit">Agregar a Orden</button>
        </form>

    </main>

    <%- include('../includes/footer.ejs') %>
    <%- include('../includes/end.ejs') %>