                <input type="checkbox" name="servicio2" id="servicio2">
                <label for="servicio2" id="servicio2-label"></label>
                <input type="checkbox" name="servicio3" id="servicio3">
                <label for="servicio3" id="servicio3-label"></label>
                <input type="checkbox" name="servicio4" id="servicio4">
                <label for="servicio4" id="servicio4-label"></label>
            </div>

            <h3 class="inspeccion-info">Descuento: </h3>
            <h3 class="inspeccion-info">Total: </h3>

            <button type="submit">Ingresar Orden</button>
        </form>

    </main>

