    <%- include('../includes/navigation.ejs') %>
    <main>

        <h1>Ingresar Nueva Orden</h1>

        <form action="/solicitarinsp" id="inspeccion-form" method="POST">
            <input type="text" name="inspeccion-direccion" id="inspeccion-direccion" class="fill-input"
